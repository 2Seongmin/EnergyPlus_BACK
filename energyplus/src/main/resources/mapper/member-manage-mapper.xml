                    </when>
                    <!-- 가입일이 최근 3개월 이내인 회원 -->
                    <when test="filter.dateRange == '3개월'">
                        AND CREATE_DATE >= ADD_MONTHS(SYSDATE, -3)
                    </when>
                    <!-- 가입일이 최근 6개월 이내인 회원 -->
                    <when test="filter.dateRange == '6개월'">
                        AND CREATE_DATE >= ADD_MONTHS(SYSDATE, -6)
                    </when>
                    <!-- 가입일이 최근 1년 이내인 회원 -->
                    <when test="filter.dateRange == '1년'">
